<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/btn_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:onClick="goToCamera"
        app:layout_constraintBottom_toTopOf="@+id/btn_pic" />

    <Button
        android:id="@+id/btn_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:onClick="goToPicture"
        android:text="Picture"
        app:layout_constraintTop_toBottomOf="@+id/btn_cam" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:onClick="test"
        android:text="test"
        app:layout_constraintTop_toBottomOf="@+id/btn_pic" />

    <TextView
        android:id="@+id/texttext"
        android:layout_width="237dp"
        android:layout_height="49dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="12dp"
        android:text="Camera"
        app:layout_constraintStart_toStartOf="@+id/btn_cam" />

    <ImageView
        android:id="@+id/testimg"
        android:layout_width="227dp"
        android:layout_height="234dp"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="12dp"
        app:layout_anchor="@+id/texttext"
        app:layout_anchorGravity="top|center" />

</RelativeLayout>